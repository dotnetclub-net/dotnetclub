@model Discussion.Core.ViewModels.UserViewModel
@{
    ViewData["Title"] = "用户登录";
}

<div class="row">
    <div class="panel no-padding panel-topic-list col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <div class="panel-heading">
            用户登录
        </div>

        <div class="panel-body">
            <div asp-validation-summary="All" class="text-danger"></div>
            <form class="login-form"
                  asp-controller="Account" asp-action="DoSignin"
                  asp-route-returnUrl="@Context.Request.Query["ReturnUrl"]"
                  method="post">
                <fieldset>
                    <label>
                        <span>@Html.DisplayNameFor(m => m.UserName)</span>
                        @Html.TextBoxFor(m => m.UserName, new {autofocus = true, maxlength=20})
                    </label>
                </fieldset>
                <fieldset>
                    <label>
                        <span>@Html.DisplayNameFor(m => m.Password)</span>
                        @Html.PasswordFor(m => m.Password, new {maxlength=20})
                    </label>
                </fieldset>
                <br/>
                <button class="btn btn-default signin-button">
                    <span class="glyphicon glyphicon-user">登录</span>
                </button>
                @Html.ActionLink("忘记密码？", "RetrievePassword", "Account")
            </form>
        </div>
    </div>
</div>
